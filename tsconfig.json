{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2020",
            "ES2021",
            "ESNext"
        ],
        "outDir": "./dist",
        "removeComments": true,
        "target": "ESNext",
        "module": "CommonJS",
        "baseUrl": "./",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "sourceRoot": "/",
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strict": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "jsx": "react",
        "experimentalDecorators": true
    },
    "include": [
        "./sandbox/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./package/**/*",
        "*.config.*s",
        "*.package.*s"
    ]
}
